<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ecocys</title>

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Inter:slnt,wght@@-10..0,100..900&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link rel="stylesheet" href="~/lib/animate/animate.min.css" />
    <link href="~/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">


    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!--  Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">

    @* <link rel="stylesheet" href="~/Ecocys.styles.css" asp-append-version="true" /> *@
</head>
<body>

    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->
    <!-- Topbar Start -->
    <div class="container-fluid topbar px-0 px-lg-4 bg-light py-2  d-lg-block">
        <div class="container">
            <div class="row gx-0 align-items-center">
                <div class="col-lg-8 text-center text-lg-start mb-lg-0 ">
                    <div class="d-wrap flex">

                        <div class="ps-3">
                            <a href="mailto:management@ecocys.com" class="text-muted small"><i class="fas fa-envelope text-primary me-2"></i>management@ecocys.com</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 text-center text-lg-end">
                    <div class=" justify-content-end d-block d-sm-flex">
                        <div class="d-flex  justify-content-center">
                            <a class="btn p-0 text-primary me-3" href="#"><i class="fab fa-facebook-f"></i></a>
                            <a class="btn p-0 text-primary me-3" href="#"><i class="fab fa-twitter"></i></a>
                            <a class="btn p-0 text-primary me-3" href="#"><i class="fab fa-instagram"></i></a>
                            <a class="btn p-0 text-primary me-0" href="#"><i class="fab fa-linkedin-in"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Topbar End -->
    <!-- Navbar & Hero Start -->
    <div class="container-fluid nav-bar px-0 px-lg-4 py-lg-0">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light">
                <a href="/">
                    <img src="~/img/logo.webp">
                    <!-- <img src="~/img/logo.png" alt="Logo"> -->
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="fa fa-bars"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav mx-0 mx-lg-auto">
                        <a href="/" class="nav-item nav-link active">Home</a>
                        <a asp-controller="home" asp-action="aboutus" class="nav-item nav-link">About Us</a>
                        <a asp-controller="home" asp-action="ourservices" class="nav-item nav-link">Our Services</a>
                        <a asp-controller="home" asp-action="Contact_Us" class="nav-item nav-link">Contact Us</a>
                        <a asp-controller="home" asp-action="faq" class="nav-item nav-link">FAQs</a>
                        <div class="nav-btn px-3">
                            <a href="contactus.html" class="btn btn-primary rounded-pill py-2 px-4 ms-3 flex-shrink-0"> Get Starts</a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    @RenderBody()

    <!-- Footer Start -->
    <div class="container-fluid footer pt-4 bg-light wow fadeIn" data-wow-delay="0.2s">
        <div class="container">
            <div class="row g-5">

                <div class="">
                    <div class="row g-4">
                        <div class="col-md-6 col-lg-3 col-xl-3">
                            <div class="footer-item">
                                <a href="/" class="p-0">
                                    <img src="~/img/logo.webp">
                                    <!-- <img src="~/img/logo.png" alt="Logo"> -->
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-5 col-xl-5">
                            <div class="footer-item align-items-center ">
                                <a asp-controller="home" asp-action="aboutus">About Us</a>
                                <a asp-controller="home" asp-action="ourservices">Our Services</a>
                                <a asp-controller="home" asp-action="faq">FAQs</a>
                                <a asp-controller="home" asp-action="Contact_Us"> Contact Us</a>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-4 col-xl-4">
                            <div class="footer-btn d-flex justify-content-end">
                                <a class="btn btn-md-square rounded-circle me-3" href="#"><i class="fab fa-facebook-f"></i></a>
                                <a class="btn btn-md-square rounded-circle me-3" href="#"><i class="fab fa-twitter"></i></a>
                                <a class="btn btn-md-square rounded-circle me-3" href="#"><i class="fab fa-instagram"></i></a>
                                <a class="btn btn-md-square rounded-circle me-0" href="#"><i class="fab fa-linkedin-in"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Copyright Start -->
    <div class="container-fluid copyright py-4">
        <div class="container">
            <div class="row g-4 align-items-center">
                <div class="col-md-12 text-center  mb-md-0">
                    <span class="text-body"><a href="#" class="border-bottom text-white"><i class="fas fa-copyright text-light me-2"></i>© @DateTime.Now.Year ecocys. All rights reserved. Empowering retailers in the digital age.</a>, All right reserved.</span>
                </div>

            </div>
        </div>
    </div>
    <!-- Copyright End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-primary btn-lg-square rounded-circle back-to-top"><i class="fa fa-arrow-up"></i></a>

    <!-- JavaScript Libraries -->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/lightbox/js/lightbox.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
